#module
;--------------------------------------------------
#defcfunc htmlenc str inp, int sw
	dest = inp
	strrep dest, "&", "&amp;"
	strrep dest, "<", "&lt;"
	strrep dest, ">", "&gt;"
	strrep dest, "\"", "&#34;"
	if sw {
		strrep dest, "  ", " &nbsp;"
		strrep dest, "\n", "<br>"
	}
	return dest
;--------------------------------------------------
#define global ctype htmlenc2(%1)  htmlenc(%1, 2)
;--------------------------------------------------
#defcfunc urlenc str inp
	src = inp
	dest = ""
	memexpand dest, strlen(src) * 3 + 1 ; sdim
	p = 0
	repeat strlen(src)
		c = peek(src, cnt)
		if (c>='a' & c<='z') {
			poke dest, p, c : p++
		} else:if (c>='A' & c<='Z') {
			poke dest, p, c : p++
		} else:if (c>='0' & c<='9') | c='_' {
			poke dest, p, c : p++
		} else:if c = ' ' {
			poke dest, p, '+' : p++
		} else {
			a = c >> 4
			b = c & 15
			if a >= 10 : a += 55 : else : a += '0'
			if b >= 10 : b += 55 : else : b += '0'
			poke dest, p, '%' : p++
			poke dest, p, a : p++
			poke dest, p, b : p++
		}
	loop
	poke dest, p
	return dest
;--------------------------------------------------
#defcfunc urldec str inp
	src = inp
	sdim dest, strlen(src) + 1
	p = 0
	repeat
		c = peek(src, p) : p++
		if c = 0 : break
		if c = '+' {
			c = ' '
		} else:if c = '%' {
			a = peek(src, p) : p++
			b = peek(src, p) : p++
			if a >= 'A' : a -= 55 : else : a -= '0'
			if b >= 'A' : b -= 55 : else : b -= '0'
			c = a << 4 | b
		}
		poke dest, cnt, c
	loop
	return dest
;--------------------------------------------------
#defcfunc QuoteEsc str inp
	dest = inp
	strrep dest, "\\", "\\\\"
	strrep dest, "\"", "\\\""
	strrep dest, "'", "\\'"
	return dest
;--------------------------------------------------
#defcfunc StrHash var inp
	a = 0
	repeat strlen(inp)
		a = a * 137 + peek(inp, cnt)
	loop
	return a
#global

