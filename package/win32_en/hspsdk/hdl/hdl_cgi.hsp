	; GET cmd, arg, kwd; hdl:?cmd=arg,kwd
	bstr = p1
	cmd = "" : arg = "" : kwd = ""
	i = instr(bstr,,",") : if i > 0 : kwd = urldec(strmid(bstr, i+1, 999)) : poke bstr, i
	i = instr(bstr,,"=") : if i > 0 : arg = urldec(strmid(bstr, i+1, 999)) : poke bstr, i
