; キーワーズ強調
#deffunc KeywordEmphasis2 array v1, var v2
	if notnull(v2) {
		p = 0
		repeat
			; スペース区切り出し
			getstr astr, v2, p, ' '
			if strsize = 0 : break
			p += strsize
			if notnull(astr) : KeywordEmphasis v1, htmlenc(astr)
		loop
	}
	return

