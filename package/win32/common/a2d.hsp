	if imgValid {
		GdipDeleteBrush imgBrush	; 旧ブラシを削除
		;imgBrush = 0
		GdipCreateSolidFill RGBA(gf_r, gf_g, gf_b, p1), varptr(imgBrush)	; ブラシを作成
		alRenewPen
	}
	return

