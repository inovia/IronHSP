#deffunc alCreateImageByFile int p1, str p2 ; ID, filename
	alGetFileWidth p2, w, h
	if stat = 0 {
		alCreateImage p1, w, h	; 強制的に 32bpp にするために 2 pass でロード
		alLoadFile p2
		return 0
	}
	return -1

