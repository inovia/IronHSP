;============================================================
;
; テキスト描画のサンプルです。
;
; Artlet2D では、矩形領域内に収まるようにテキストを自動改行
; して表示することができます。
;
;============================================================

#include "a2d.hsp"

	; 仮想イメージ 0 を作成
	alCreateImage 0, 640, 480
	if stat = -1 : dialog "GDI+ を初期化できませんでした。" : end

	; フォント選択
	alFont "ＭＳ ゴシック", 40

	; テキスト描画 (基本)
	alDrawText "test テキスト"

	; 矩形領域内自動折り返しでテキスト描画
	s = {"
