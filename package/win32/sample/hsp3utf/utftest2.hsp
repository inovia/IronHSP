#include "hsp3utf.as"

fname = "utf-8.txt"
sname = "sjis.txt"

mes "テキストファイル["+fname+"]の内容を読み込みます。
mes "------------------------------------"

notesel utftext
noteload fname

sdim outbuf, strlen(utftext)*2
cnvstoa outbuf, utftext

notesel outbuf
notesave sname

mes "SJIS形式で["+sname+"]に保存しました。"

stop


